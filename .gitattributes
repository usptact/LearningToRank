# Auto detect text files and perform LF normalization
* text=auto

# .NET Core
*.cs text diff=csharp
*.csproj text diff=csproj
*.sln text diff=csproj
*.props text diff=csproj
*.targets text diff=csproj

# JSON files
*.json text diff=json

# Markdown files
*.md text diff=markdown

# Data files (LTR format)
*.ltr text

# Binary files
*.bin binary
*.dll binary
*.exe binary
*.pdb binary
*.nupkg binary

# Infer.NET GeneratedSource should be treated as generated code
GeneratedSource/ linguist-generated=true
**/GeneratedSource/ linguist-generated=true

# Model files (can be large, treat as binary)
*.bin linguist-generated=true
model.json linguist-generated=true
predictions.csv linguist-generated=true
test_*.csv linguist-generated=true

# Ensure consistent line endings
*.cs text eol=lf
*.csproj text eol=lf
*.sln text eol=lf
*.json text eol=lf
*.md text eol=lf
*.ltr text eol=lf